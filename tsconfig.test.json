{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"isolatedModules": false
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.js",
		"src/**/*.jsx",
		"next-env.d.ts",
		".next/types/**/*.ts",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"tests/**/*.js",
		"tests/**/*.jsx"
	],
	"exclude": [
		"node_modules",
		"build",
		"scripts"
	]
}
