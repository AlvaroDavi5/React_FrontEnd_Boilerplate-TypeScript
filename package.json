{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "react_frontend_boilerplate",
	"description": "React Boilerplate for Front-End using TypeScript",
	"version": "1.0.0",
	"license": "MIT",
	"author": "Álvaro Davi Santos Alves <alvaro.davisa@gmail.com>",
	"contributors": [
		"Álvaro Davi Santos Alves <alvaro.davisa@gmail.com>"
	],
	"main": "./src/app.tsx",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlvaroDavi5/React_FrontEnd_Boilerplate-TypeScript.git",
		"ssh": "git@github.com:AlvaroDavi5/React_FrontEnd_Boilerplate-TypeScript.git"
	},
	"private": false,
	"os": [
		"linux",
		"ubuntu",
		"win32"
	],
	"engines": {
		"node": "f>=18.6.x <=20.x.x",
		"yarn": "f>=1.22.x <3.x.x"
	},
	"engineStrict": true,
	"keywords": [
		"boilerplate",
		"node",
		"typescript",
		"javascript",
		"react"
	],
	"scripts": {
		"typecheck": "tsc --project tsconfig.json --noEmit",
		"build": "next build",
		"start": "cross-env NODE_PATH=. next start -p 3001",
		"start:dev": "cross-env NODE_PATH=. next dev -p 3001",
		"security-check": "node ./scripts/security-check.js",
		"mock-dependencies": "cross-env NODE_PATH=. ts-node --project tsconfig.json ./scripts/mock-dependencies.ts",
		"test": "cross-env NODE_ENV=test jest -c jest.config.js",
		"test:#it": "cross-env NODE_ENV=test jest -t=#it -c jest.config.js --verbose",
		"test:watch": "cross-env NODE_ENV=test jest -c jest.config.js --watch --verbose --detectOpenHandles",
		"test:coverage": "yarn test --coverage",
		"lint": "yarn ts:lint && yarn js:lint",
		"lint:fix": "yarn ts:lint --quiet --fix && yarn js:lint --quiet --fix",
		"ts:lint": "eslint --ext .ts \"{src,tests,scripts}/**/*.{ts,tsx}\"",
		"js:lint": "eslint --ext .js \"./**/*.{js,jsx}\"",
		"commit": "git-cz",
		"postinstall": "husky install"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "husky add ./.husky/pre-commit",
			"pre-push": "husky add ./.husky/pre-push",
			"commit-msg": "husky add ./.husky/commit-msg"
		}
	},
	"dependencies": {
		"@chakra-ui/icons": "^2.2.4",
		"@chakra-ui/next-js": "^2.4.2",
		"@chakra-ui/react": "^2.10.2",
		"@emotion/react": "^11.13.3",
		"@emotion/styled": "^11.13.0",
		"cross-env": "^7.0.3",
		"framer-motion": "^11.11.8",
		"next": "14.2.7",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"typescript": "^5.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.6",
		"@commitlint/config-conventional": "^17.6.6",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.0.0",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"@typescript-eslint/eslint-plugin": "^5.61.0",
		"@typescript-eslint/eslint-plugin-tslint": "^5.61.0",
		"@typescript-eslint/parser": "^5.61.0",
		"@typescript-eslint/scope-manager": "^5.61.0",
		"@typescript-eslint/typescript-estree": "^5.61.0",
		"@typescript-eslint/utils": "^5.61.0",
		"babel-jest": "^29.7.0",
		"child_process": "^1.0.2",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.44.0",
		"eslint-config-next": "14.2.7",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsdoc": "^46.4.3",
		"eslint-plugin-n": "^16.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-security": "^1.7.1",
		"eslint-plugin-standard": "^5.0.0",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"jest-cli": "^29.7.0",
		"jest-structure": "^2.0.1",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"tslint": "^6.1.3"
	}
}