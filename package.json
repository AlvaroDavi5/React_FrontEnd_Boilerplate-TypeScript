{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "react_frontend_boilerplate",
	"description": "React Boilerplate for Front-End using TypeScript",
	"version": "1.0.0",
	"license": "MIT",
	"author": "Álvaro Davi Santos Alves <alvaro.davisa@gmail.com>",
	"contributors": [
		"Álvaro Davi Santos Alves <alvaro.davisa@gmail.com>"
	],
	"main": "./src/app.tsx",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlvaroDavi5/React_FrontEnd_Boilerplate-TypeScript.git",
		"ssh": "git@github.com:AlvaroDavi5/React_FrontEnd_Boilerplate-TypeScript.git"
	},
	"private": false,
	"os": [
		"linux",
		"ubuntu",
		"win32"
	],
	"engines": {
		"node": "f>=18.6.x <=20.x.x",
		"yarn": "f>=1.22.x <3.x.x"
	},
	"engineStrict": true,
	"keywords": [
		"boilerplate",
		"node",
		"typescript",
		"javascript",
		"react"
	],
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "husky add ./.husky/pre-commit",
			"pre-push": "husky add ./.husky/pre-push",
			"commit-msg": "husky add ./.husky/commit-msg"
		}
	},
	"dependencies": {
		"next": "14.2.7",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"typescript": "^5.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.6",
		"@commitlint/config-conventional": "^17.6.6",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.0.0",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"babel-jest": "^29.7.0",
		"child_process": "^1.0.2",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint-config-next": "14.2.7",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"jest-cli": "^29.7.0",
		"jest-structure": "^2.0.1",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0"
	}
}